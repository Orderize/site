server {
    listen 80;
    server_name orderize.com www.orderize.com;

    return 301 https://$host$request_url;
}

server {
    listen 443 ssl;
    server_name orderize.com www.orderize.com;

    ssl_certificate /etc/letsencrypt/live/orderize.com/fullchain.pem
    ssl_certificate_key /etc/letsencrypt/live/orderize.com/private.pem


    location / {
        root /var/www/orderize.com/html;
        index index.html index.htm;
    }

    location /api/ {
        proxy_pass http://10.0.0.233:8080/;
    	proxy_set_header Host $host;
	    proxy_set_header X-Real_IP $remote_addr;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    proxy_set_header X-Forwarded-Proto $scheme;
    }
}
